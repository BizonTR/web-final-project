<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <div class="container">
        <h1 class="mt-4"><%= contentTitle %></h1>

        <!-- Search and Pagination -->
        <%- include('../partials/search-pagination', {
            searchAction: '/user',
            searchQuery: searchQuery,
            currentPage: currentPage,
            totalPages: totalPages
        }) %>

        <!-- Game List -->
        <div class="row">
            <% games.forEach(game => { %>
                <div class="col-12 col-sm-6 col-md-4 mb-4">
                    <a href="/user/game/<%= game.id %>" class="text-decoration-none">
                        <div class="card h-100">
                            <img src="<%= game.url %>" class="card-img-top" alt="<%= game.title %>" onerror="this.onerror=null;this.src='/kirmizi-logo-yatay.png';">
                            <div class="card-body">
                                <h5 class="card-title text-dark"><%= game.title %></h5>
                                <p class="card-text text-dark">
                                    <%= game.description.length > 100 ? game.description.substring(0, 100) + '...' : game.description %>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>

        <!-- Announcements -->
        <div class="mt-5">
            <h2>Duyurular</h2>
            <div class="row">
                <script>
                    // Client-side'da console.log için
                    console.log('EJS içinde announcements:', <%= typeof announcements !== 'undefined' ? JSON.stringify(announcements) : 'undefined' %>);
                    console.log('announcements type:', <%= typeof announcements !== 'undefined' ? 'Array.isArray(announcements): ' + Array.isArray(announcements) : 'undefined' %>);
                    console.log('announcements length:', <%= typeof announcements !== 'undefined' ? announcements.length : '0' %>);
                </script>

                <% if (typeof announcements !== 'undefined' && announcements && announcements.length > 0) { %>
                    <% announcements.forEach(announcement => { %>
                        <div class="col-md-12 mb-3">
                            <a href="/user/announcement/<%= announcement.id %>/<%= slugField(announcement.title) %>" class="text-decoration-none">
                                <div class="card announcement-card h-100">
                                    <div class="card-body d-flex align-items-center justify-content-between">
                                        <h5 class="mb-0 text-primary"><%= announcement.title %></h5>
                                        <small class="text-muted"><%= new Date(announcement.createdAt).toLocaleDateString('tr-TR') %></small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info">
                            Henüz duyuru bulunmamaktadır. 
                            <% if (typeof announcements !== 'undefined') { %>
                                <!-- Debug bilgisi -->
                                (Announcements: <%= typeof announcements %>, Length: <%= announcements ? announcements.length : 'N/A' %>)
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('../partials/script') %>
</body>
</html>
