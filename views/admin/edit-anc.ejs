<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <%- include('../partials/sidebar') %>

        <!-- Page content wrapper -->
        <div id="page-content-wrapper">

            <!-- Page content -->
            <div class="container-fluid">
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                    ☰ Menü
                </button>
                <h1 class="mt-4"><%= contentTitle %></h1>
                <div class="row">
                    <div class="col-sm-8 bg-light ms-2 border border-info">
                        <form method="post">
                            <input type="hidden" name="noticeid" value="<%=data.id%>">
                            <div class="form-group row mb-2 mt-3">
                                <label for="title" class="col-sm-3 col-form-label">Anouncment Title</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="title" name="title" placeholder="Tittle" value="<%=data.title %>">
                                </div>
                            </div>
                            <div class="form-group row mb-2">
                                <label for="explain" class="col-sm-3 col-form-label">Anouncment Explain</label>
                                <div class="col-sm-9">
                                    <textarea name="explain" id="explain">
                                        <%=data.exp %>
                                    </textarea>
                                </div>
                            </div>
                            <div class="form-group row mb-2">
                                <div class="col-sm-3">Is home</div>
                                <div class="col-sm-9">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="gridCheck1" name="isActive" <%=data.isactive?"checked":null %>>
                                        <label class="form-check-label" for="gridCheck1">
                                            is Home
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-2">
                                <div class="col-sm-3">User</div>
                                <div class="col-sm-9">
                                    <select name="user" id="user" class="form-control">
                                        <%users.forEach(element => { %>
                                            <option value="<%=element.id %>" <%=element.id==data.userId?"selected":null  %>> <%=element.name+" "+element.surname %> </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row justify-content-end mb-2">
                                <div class="col-sm-9 ">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </form>
                        <form action="/admin/add-game-images" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="gameId" value="<%= data.id %>">
                            <div class="mb-3">
                                <label for="images" class="form-label">Resim Yükle</label>
                                <input type="file" name="images" id="images" class="form-control" multiple>
                            </div>
                            <button type="submit" class="btn btn-primary">Resimleri Yükle</button>
                        </form>
                        <form action="/admin/edit/game/<%= data.id %>" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label">Oyun Başlığı</label>
                                <input type="text" class="form-control" id="title" name="title" value="<%= data.title %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="explain" class="form-label">Açıklama</label>
                                <textarea class="form-control" id="explain" name="explain" rows="3" required><%= data.description %></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="bannerImage" class="form-label">Banner Resmi</label>
                                <input type="file" class="form-control" id="bannerImage" name="bannerImage">
                                <% if (data.url) { %>
                                    <img src="<%= data.url %>" alt="Banner Resmi" class="img-fluid mt-2">
                                <% } %>
                            </div>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                        <h3>Yüklenen Resimler</h3>
                        <div class="row">
                            <% if (data.GameImages && data.GameImages.length > 0) { %>
                                <% data.GameImages.forEach(image => { %>
                                    <div class="col-6 col-md-4 mb-3">
                                        <div class="card">
                                            <img src="<%= image.imagePath %>" alt="Game Image" class="card-img-top">
                                            <div class="card-body text-center">
                                                <form action="/admin/delete-game-image/<%= image.id %>" method="POST">
                                                    <button type="submit" class="btn btn-danger">Sil</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p>Henüz resim yüklenmedi.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/script') %>
    <!--Ck Editor script kodu-->
    <script>
        ClassicEditor
            .create( document.querySelector( '#explain' ) )
            .then( editor => {
                console.log( editor );
            } )
            .catch( error => {
                console.error( error );
            } );
    </script>
</body>
</html>
